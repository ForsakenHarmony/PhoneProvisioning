{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es2016",
      "esnext",
      "esnext.asynciterable",
      "es2017.object"
    ],
    "moduleResolution": "node",
    "newLine": "lf",
    "outDir": "dist",
    "strict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}