{
   "type": "sqlite",
   "database": "database.sqlite",
   "logger": "advanced-console",
   "logging": "all",
   "migrationsRun": true,
   "entities": [
      "src/entities/**/*.ts"
   ],
   "migrations": [
      "src/migrations/**/*.ts"
