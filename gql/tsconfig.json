{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2016", "esnext.asynciterable"],
    "moduleResolution": "node",
    "newLine": "lf",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}